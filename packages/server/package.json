{
  "name": "@claude-config/server",
  "version": "1.0.0",
  "description": "Express API server for Claude Configuration Manager",
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "start": "node dist/src/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "claude",
    "configuration",
    "server",
    "api"
  ],
  "author": "Matt Wigdahl <mlwigdahl@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@claude-config/core": "file:../core",
    "@claude-config/shared": "file:../shared",
    "@types/minimatch": "^5.1.2",
    "@types/yauzl": "^2.10.3",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "minimatch": "^9.0.5",
    "multer": "^1.4.5-lts.1",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.13",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^30.0.5",
    "nodemon": "^3.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
