{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@claude-config/core": ["../core/dist"],
      "@claude-config/shared": ["../shared/dist"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../shared"
    }
  ]
}